@using WebSelling.Models;
@model List<Product>
@{
    ViewBag.Title = "DetailsCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Category cate = (Category)Session["category"];
}
<style>
    .content {
        text-overflow: ellipsis;
        overflow: hidden;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        font-weight: initial;
    }
</style>
<link href="~/Content/Layout/css/Detailsproduct.css" rel="stylesheet" />
@Html.Action("Menu", "Menu")
<div class="row" style="margin-left: 5%; margin-top: 2%">
    <div class="col-md-12">
        @foreach (var itemsub in Model)
        {
            <a href="#"><span class="badge badge-pill badge-default text-uppercase">@itemsub.SubCategory.SubCategory_Name</span></a>
        }
    </div>
</div>
<div class="row" style="margin-left: 2%; margin-top: 2%; margin-bottom: 3%">
    @foreach (var item in Model)
    {
        <div class="col-md-3" style="margin-left: -1%">
            <figure class="snip1249">
                <div class="image">
                    <img src="~/Content/Image/@item.Product_Img" alt="sample90" /><a href="#" style="color: white"><i class="fa fa-heart"></i></a>
                </div>
                <figcaption>
                    <h3>@item.Product_Name</h3>
                    <p class="content">@item.Product_Description</p>
                    <div class="price">
                        <s>@{float price = (float)item.Product_Price;} @price.ToString("#,##0") VNĐ</s>
                    </div>
                    <a href="#" class="add-to-cart">Add to Cart</a>
                </figcaption>
            </figure>
        </div>
    }
    <div class="clearfix"> </div>
</div>
<script>
    $(".hover").mouseleave(
        function () {
            $(this).removeClass("hover");
        }
    );
</script>
