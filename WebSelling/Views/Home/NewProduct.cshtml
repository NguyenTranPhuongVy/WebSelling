@using WebSelling.Models;
@model List<Product>
@Html.Action("Css", "Home")
<style>
    .content {
        text-overflow: ellipsis;
        overflow: hidden;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        font-weight: initial;
    }

    .chuyen {
        color: black;
    }

        .chuyen:hover {
            color: #4A9F43 !important;
        }
</style>
<link href="~/Content/Layout/css/Newproduct.css" rel="stylesheet" />
