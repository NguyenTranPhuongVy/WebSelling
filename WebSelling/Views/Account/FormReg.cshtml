@using WebSelling.Models;
@model User
@{ 
    User user = (User)Session["user"];
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/FormReg/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Content/FormReg/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Get Shit Done Bootstrap Wizard by Creative Tim</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!--     Fonts and icons     -->
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet">

    <!-- CSS Files -->
    <link href="~/Content/FormReg/~/Content/FormReg/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/FormReg/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/FormReg/assets/css/gsdk-bootstrap-wizard.css" rel="stylesheet" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/Content/FormReg/assets/css/demo.css" rel="stylesheet" />
</head>

<body>
    <div class="image-container set-full-height" style="background-image: url('../../Content/Layout/images/about.png');">
        <!--   Creative Tim Branding   -->
        <!--  Made With Get Shit Done Kit  -->
        <a href="http://demos.creative-tim.com/get-shit-done/index.html?ref=get-shit-done-bootstrap-wizard" class="made-with-mk">
            <div class="brand">GK</div>
            <div class="made-with">Made with <strong>GSDK</strong></div>
        </a>

        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">

                    <!--      Wizard container        -->
                    <div class="wizard-container">

                        <div class="card wizard-card" data-color="orange" id="wizardProfile">
                            <script>
                                function valiInfo() {
                                    var user_phone = document.getElementById("user_phone").value;
                                    var user_fname = document.getElementById("user_fname").value;
                                    var user_lname = document.getElementById("user_lname").value;
                                    var user_facebook = document.getElementById("user_facebook").value;

                                    //Regex
                                    var re_phone = /((09|03|07|08|05)+([0-9]{8})\b)/g;

                                    var re_facebook = /(?:http:\/\/)?(?:www\.)?facebook\.com\/(?:(?:\w)*#!\/)?(?:pages\/)?(?:[\w\-]*\/)*([\w\-]*)/;

                                    if (user_fname == '' || user_lname == '') {
                                        document.getElementById("testinfo").innerHTML = "<div class='alert alert-warning' role='alert'>Vui Lòng! Nhập Đủ Thông Tin</div>";
                                    }
                                    else if (re_phone.test(user_phone) == false) {
                                        if (user_phone == '') {
                                            document.getElementById("testinfo").innerHTML = "<div class='alert alert-warning' role='alert'>Vui Lòng! Nhập Số Điện Thoại.</div>";
                                        }
                                        else {
                                            document.getElementById("testinfo").innerHTML = "<div class='alert alert-warning' role='alert'>Số Điện Thoại Không Hợp Lệ!</div>";
                                        }
                                    }
                                    else if (re_facebook.test(user_facebook) == false) {
                                        if (user_facebook != '') {
                                            document.getElementById("testinfo").innerHTML = "<div class='alert alert-warning' role='alert'>Lỗi! Sai Link Facebook.</div>";
                                        }
                                        else {
                                            return true;
                                        }
                                    }
                                    else {
                                        return true;
                                    }
                                    return false;
                                }
                            </script>
                            <form action="@Url.Action("FormReg", "Account")" method="post" onsubmit="return valiInfo()">
                                <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->
                                <div class="wizard-header">
                                    <h3>
                                        <b> HỒ SƠ </b> CỦA BẠN <br>
                                        <small>Thông tin này sẽ cho chúng tôi biết thêm về bạn.</small>
                                    </h3>
                                </div>

                                <div class="wizard-navigation">
                                    <ul>
                                        <li><a href="#about" data-toggle="tab">Giới Thiệu</a></li>
                                        <li><a href="#account" data-toggle="tab">Giới Tính</a></li>
                                        <li><a href="#address" data-toggle="tab">Địa Chỉ</a></li>
                                    </ul>

                                </div>

                                <div class="tab-content">
                                    <div class="tab-pane" id="about">
                                        <div class="row">
                                            <h4 class="info-text"> Hãy bắt đầu với thông tin cơ bản.</h4>
                                            <div class="col-sm-4 col-sm-offset-1">
                                                <div class="picture-container">
                                                    <div class="picture">
                                                        <img src="~/Content/FormReg/assets/img/default-avatar.png" class="picture-src" id="wizardPicturePreview" title="" />
                                                        <input type="file" id="wizard-picture" name="User_Img">
                                                    </div>
                                                    <h6>Ảnh Đại Diện</h6>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Họ <small>(*)</small></label>
                                                    <input type="text" class="form-control" id="user_lname" name="User_LastName" placeholder="Nguyễn...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Tên <small>(*)</small></label>
                                                    <input type="text" class="form-control" id="user_fname" name="User_Name" placeholder="Văn A...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Ngày Sinh </label>
                                                    <input type="date" class="form-control" name="User_DateBirth" placeholder="mm/dd/yy...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Link Facebook <small>(*)</small></label>
                                                    <input type="text" class="form-control" id="user_facebook" name="User_LinkF" placeholder="...">
                                                </div>
                                            </div>
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Số Điện Thoại <small>(*)</small></label>
                                                    <input type="text" id="user_phone" name="User_Phone" class="form-control" placeholder="0xxx...">
                                                </div>
                                            </div>
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label style="color: orangered"><small>(*)</small>Bắt Buộc</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="account">
                                        <h4 class="info-text"> Giới Tính Của Bạn Là Gì? </h4>
                                        <div class="row">
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-radio">
                                                        <input type="radio" name="User_Sex" value="1">
                                                        <div class="icon">
                                                            <i class="fa fa-male" style="font-size: 80px; margin-top: 12%; color: black"></i>
                                                        </div></input>
                                                        <h6>Nam</h6>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-radio">
                                                        <input type="radio" name="" value="0">
                                                        <div class="icon">
                                                            <i class="fa fa-female" style="font-size: 80px; margin-top: 12%; color: black"></i>
                                                        </div>
                                                        <h6>Nữ</h6>
                                                    </div>

                                                </div>
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-radio">
                                                        <input type="radio" name="" value="2">
                                                        <div class="icon">
                                                            <i class="fa fa-transgender-alt" style="font-size: 75px; margin-top: 15%; margin-left: 4%; color: black"></i>
                                                        </div>
                                                        <h6>Khác</h6>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="address">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <h4 class="info-text"> Bạn Đang Ở Đâu? </h4>
                                            </div>
                                            <div class="col-sm-10 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Địa Chỉ</label>
                                                    <input type="text" class="form-control" name="User_Address" placeholder="Số x, Đường X,...">
                                                </div>
                                            </div>
                                            <div class="col-sm-5 col-sm-offset-1">
                                                <div class="form-group">
                                                    <label>Thành Phố</label><br>
                                                    <select class="form-control" name="User_City">
                                                        <option value="Afghanistan"> Afghanistan </option>
                                                        <option value="Albania"> Albania </option>
                                                        <option value="Algeria"> Algeria </option>
                                                        <option value="American Samoa"> American Samoa </option>
                                                        <option value="Andorra"> Andorra </option>
                                                        <option value="Angola"> Angola </option>
                                                        <option value="Anguilla"> Anguilla </option>
                                                        <option value="Antarctica"> Antarctica </option>
                                                        <option value="...">...</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label>Tỉnh Thành</label><br>
                                                    <select class="form-control" name="User_Province">
                                                        <option value="Afghanistan"> Afghanistan </option>
                                                        <option value="Albania"> Albania </option>
                                                        <option value="Algeria"> Algeria </option>
                                                        <option value="American Samoa"> American Samoa </option>
                                                        <option value="Andorra"> Andorra </option>
                                                        <option value="Angola"> Angola </option>
                                                        <option value="Anguilla"> Anguilla </option>
                                                        <option value="Antarctica"> Antarctica </option>
                                                        <option value="...">...</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="text-center" id="testinfo"></div>
                                    <div class="text-center" id="testname"></div>
                                </div>
                                <div class="wizard-footer height-wizard">
                                    <div class="pull-right">
                                        <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Tiếp Tục' />
                                        <input type='submit' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Hoàn Thành' />
                                    </div>

                                    <div class="pull-left">
                                        <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Trở về' />
                                    </div>
                                    <div class="clearfix"></div>
                                </div>

                            </form>

                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div><!-- end row -->
        </div> <!--  big container -->

        <div class="footer">
            <div class="container" style="color: black">
                Made with <i class="fa fa-heart heart"></i> by <a href="http://www.creative-tim.com" style="color: orange">Creative Tim</a>. Free download <a href="http://www.creative-tim.com/product/bootstrap-wizard" style="color: orange">here.</a>
            </div>
        </div>

    </div>
    <!--   Core JS Files   -->
    <script src="~/Content/FormReg/assets/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="~/Content/FormReg/assets/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/FormReg/assets/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>

    <!--  Plugin for the Wizard -->
    <script src="~/Content/FormReg/assets/js/gsdk-bootstrap-wizard.js"></script>

    <!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
    <script src="~/Content/FormReg/assets/js/jquery.validate.min.js"></script>
    <script src="~/Scripts/fontawesome/all.js"></script>
</body>
</html>

