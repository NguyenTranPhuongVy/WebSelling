@using WebSelling.Models;
@model User
@{
    User user = (User)Session["user"];
}
<link href="~/Content/Layout/css/InforUser.css" rel="stylesheet" />
@Html.Action("Menu", "Menu")
<body style="background-color: #f1f1f1">
    <div class="container">
        <div class="row" style="margin-top: -7%; height: 150px">
            <div class="col-xs-12 col-md-6" style="background-color: #ffffff;  border-radius: 5px">
                <div class="row" style="margin-top: 3%">
                    <div class="image-circle col-md-3">
                        <img src="~/Content/Image/@user.User_Img" />
                    </div>
                    <div class="col-md-9">
                        <h5 style="font-weight: 700">@user.User_LastName @user.User_Name</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <a href="#" style="color: black; font-size: 13px; text-decoration-line: underline"><b>0 </b>Người theo dõi</a>
                            </div>
                            <div class="col-md-6">
                                <a href="#" style="color: black; font-size: 13px; text-decoration-line: underline"><b>0 </b>Đang theo dõi</a>
                            </div>
                        </div>
                        <a href="@Url.Action("Info", "Account")" class="btn btn-outline-secondary btn-lg" style="border-radius: 60px; font-size: 15px; text-transform: none !important"><i class="fa fa-pencil" style="color: black"> Chỉnh sửa thông tin cá nhân</i></a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 verticalLine" style="background-color: #ffffff;  border-radius: 5px">
                <div class="row" style="margin-top: 3%">
                    <div class="col-md-5">
                        <i class="fa fa-star-o"> Đánh giá: </i>
                    </div>
                    <div class="col-md-7" style="margin-left: -20%">
                        <span style="font-size: 13px">Chưa có đánh giá</span>
                    </div>
                </div>
                <div class="row" style="margin-top: 3%">
                    <div class="col-md-5">
                        <i class="fa fa-calendar"> Ngày tham gia: </i>
                    </div>
                    <div class="col-md-7" style="margin-left: -10%">
                        <span style="font-size: 13px">@user.User_DateCreate.Value.ToShortDateString()</span>
                    </div>
                </div>
                <div class="row" style="margin-top: 3%">
                    <div class="col-md-3">
                        <i class="fa fa-location-arrow"> Địa chỉ: </i>
                    </div>
                    <div class="col-md-9" style="margin-left: -5%">
                        <span style="font-size: 13px">@user.User_Address @user.User_Province @user.User_City</span>
                    </div>
                </div>
                <div class="row" style="margin-top: 3%">
                    <div class="col-md-5">
                        <i class="fa fa-comment"> Phản hồi: </i>
                    </div>
                    <div class="col-md-7" style="margin-left: -20%">
                        <span style="font-size: 13px">Chưa có phản hồi</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top: 2%; height: 350px; background-color: #ffffff; border-radius: 5px">
            <div style="margin: 2%; width: 100%">
                <span style="font-weight: 600; color: black">Đang Bán</span> - <span>0 tin</span>
                <hr />
            </div>
            <div class="container-fluid">
                <center>
                    <div class="alert alert-warning" style="height: 70px; width: 50%; background-color: #db972b">Bạn chưa có tin đăng cá nhân nào đang bán, thử đăng bán ngay.</div>
                    <button type="button" class="btn btn-outline-dark btn-lg btn-block" style="height: 50px; width: 50%">Đăng Tin</button>
                </center>
            </div>
        </div>
    </div>
</body>
