@using WebSelling.Models;
@model IEnumerable<WebSelling.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SellingAdmin/Views/Shared/_ViewAdmin.cshtml";
}
@Html.Action("CssAdmin", "HomeAdmin")
<style>
    .content {
        text-overflow: ellipsis;
        overflow: hidden;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        font-weight: initial;
    }
</style>
<div class="ui pointing menu">
    <a class="item active">
        Tất Cả
    </a>
    <a class="item">
        Sản Phẩm Mới
    </a>
    <a class="item">
        Sản phẩm không hoạt động
    </a>
</div>
<table class="ui compact celled definition table">
    <thead>
        <tr class="text-center">
            <th>Trạng thái</th>
            <th>Tên sản phẩm</th>
            <th>Hình ảnh</th>
            <th>Giá</th>
            <th>Ngày Đăng</th>
            <th>Ngày Sửa</th>
            <th>Danh Mục</th>
            <th>Loại danh mục</th>
            <th>Loại sản phẩm</th>
            <th>Người Đăng Sản Phẩm</th>
            <th width="120">Tuỳ Chọn</th>
        </tr>
    </thead>
