        <tr class="text-center">
            <td class="collapsing">
                <center>
                    <input type="checkbox" checked="checked">
                    <span class="custom-toggle-slider rounded-circle"></span>
                </center>
            </td>
            <td>@item.Product_Name</td>
            <td>
                <img src="~/Content/Image/@item.Product_Img" style="width: 100px; height: 100px" />
            </td>
            <td style="color: red">@{float price = (float)item.Product_Price;} @price.ToString("#,##0") VNĐ</td>
            <td>@item.Product_DateCreate.Value.Day/@item.Product_DateCreate.Value.Month/@item.Product_DateCreate.Value.Year</td>
            @if (item.Product_DateEdit == null)
            {
                <td>Sản phẩm không chỉnh sửa</td>
            }
            <td>@item.Category.Category_Name</td>
            @if (item.SubCategory_ID == null || item.SubProduct_ID == null)
            {
                <td>Không</td>
                <td>Không</td>
            }
            else
            {
                <td>@item.SubCategory.SubCategory_Name</td>
                <td>@item.SubProduct.SubProduct_Name</td>
            }
            <td>@item.User.User_LastName @item.User.User_Name</td>
